<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content2"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="136dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:text="Fragmento 1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnFragment1"
                android:layout_weight="1" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtNombre1"
                android:hint="Escribe tu nombre" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:text="Fragmento 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnFragment2"
                android:layout_weight="1" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtNombre2"
                android:layout_weight="1"
                android:hint="Escribe tu nombre" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:text="Fragmento 3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnFragment3"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/txtNombre3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Escribe tu nombre"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtNombre31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Escribe un numero"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/contenedor"
        android:layout_width="match_parent"
        android:layout_height="596dp"
        android:background="@color/colorPrimary">

    </FrameLayout>
</LinearLayout>